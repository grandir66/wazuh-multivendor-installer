<!-- Stormshield Firewall Decoders for Wazuh -->
<!-- https://github.com/grandir66/wazuh-multivendor-installer -->
<!-- Rule IDs: 100400-100499 -->

<!-- Main Stormshield decoder -->
<decoder name="stormshield">
  <prematch>^time="\d+-\d+-\d+ \d+:\d+:\d+" fw="\w+"</prematch>
  <regex>^time="(\d+-\d+-\d+ \d+:\d+:\d+)" fw="(\w+)" \.+ pri=(\d+) \.+ src=(\d+\.\d+\.\d+\.\d+) \.+ dst=(\d+\.\d+\.\d+\.\d+) \.+ action=(\w+) msg="(\.+)" \.+ logtype="(\w+)"</regex>
  <order>time,fw,pri,srcip,dstip,stormshield_action,msg,logtype</order>
</decoder>
